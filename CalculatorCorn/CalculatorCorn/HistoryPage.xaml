<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CalculatorCorn.Page1">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>

                <Button 
                    x:Name="HitoryClear"
                    Text="Очистить историю"
                    BackgroundColor="Firebrick"
                    FontSize="22"
                    FontAttributes="Bold"
                    Clicked="HitoryClear_Clicked"
                ></Button>
                
                
                <Label Padding="10, 20, 0, 0"
                    x:Name="HistoryLabel"
                    Text=""
                    FontSize="18"
                    TextColor="Black" 
                    HorizontalOptions="Fill" 
                />



                <Button 
                    Text="Вернуться обратно"
                    BackgroundColor="Khaki"
                    FontSize="22"
                    FontAttributes="Bold"
                    VerticalOptions="End"
                    HorizontalOptions="Fill"
                    Clicked="Button_Clicked"
                ></Button>
            
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>